# Project Configuration
PROJECT_NAME=frappe
COMPOSE_PROJECT_NAME=frappe

# Database Configuration
DB_PASSWORD=frappe

# User Configuration (will be auto-populated from host)
USER=frappe
UID=1000
GID=1000

# Frappe Configuration
FRAPPE_SITE_NAME=site1.localhost
ADMIN_PASSWORD=admin

# Custom Apps
# Comma-separated list of apps to install
# Format: app_name:repo_url:branch or app_name:repo_url or just app_name (for Frappe marketplace)
# Example: CUSTOM_APPS=dartwing:https://github.com/opensoft/dartwing-frappe:develop,erpnext
CUSTOM_APPS=

# Resource Limits
CONTAINER_MEMORY=4g
CONTAINER_CPUS=2
